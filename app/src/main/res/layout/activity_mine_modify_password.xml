<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_mine_modify_password"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ymt.cloudpos.view.MineModifyPasswordActivity">
    <include layout="@layout/top_nav_include" />

    <LinearLayout
        android:background="@color/white"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:gravity="right"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:text="账号:"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:text="hcangit"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/alpaha_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:layout_height="50dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="right"
            android:textColor="@color/black"
            android:text="原密码:"/>
        <EditText
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:maxLength="20"
            android:hint="请输入原密码"
            style="@style/edittext_style"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">
        <View
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginLeft="10dp"
            android:background="@color/alpaha_gray"
            />
    </LinearLayout>
    <LinearLayout
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_height="50dp">
        <TextView
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:gravity="right"
            android:textColor="@color/black"
            android:text="新密码:"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_inputPassword"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:inputType="textPassword"
                android:maxLength="20"
                android:hint="请输入新密码"
                style="@style/edittext_style"/>
            <ImageView
                android:id="@+id/iv_passwordHidden"
                android:layout_alignParentRight="true"
                android:layout_width="40dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:src="@mipmap/pic_close_eye"/>
        </RelativeLayout>

    </LinearLayout>
    <Button
        android:id="@+id/btn_next"
        android:layout_marginTop="20dp"
        style="@style/button_style"
        android:text="@string/btn_confirm"/>

</LinearLayout>
